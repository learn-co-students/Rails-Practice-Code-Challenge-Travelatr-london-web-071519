<h1>Edit Post</h1>

<%= form_for(@post) do |f| %>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= f.label :title %>
<%= f.text_field :title %>
<br><br>
<%= f.label :content %>
<%= f.text_area :content %>
<br><br>

<%= f.hidden_field :likes, value: params[:likes] = 0 %>
<br><br>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br><br>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br><br>
<%= f.submit %>

<% end %>